<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PDCSim" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/pdc_red</item>
        <item name="colorPrimaryVariant">@color/pdc_dark_red</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/pdc_gold</item>
        <item name="colorSecondaryVariant">@color/pdc_gold</item>
        <item name="colorOnSecondary">@color/pdc_black</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/pdc_black</item>
        <item name="android:windowBackground">@color/pdc_black</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/pdc_black</item>
        <item name="android:navigationBarColor">@color/pdc_black</item>
        
        <!-- Fullscreen -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        
        <!-- Splash screen -->
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.PDCSim.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.PDCSim</item>
    </style>
</resources>
